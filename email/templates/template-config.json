  "defaults": {
    "fromEmail": "{{FROM_EMAIL}}",
    "replyToEmail": "{{REPLY_TO_EMAIL}}",
    "companyName": "{{COMPANY_NAME}}",
    "website": "{{WEBSITE_URL}}",
    "supportEmail": "{{SUPPORT_EMAIL}}",
    "supportPhone": "{{SUPPORT_PHONE}}"
  }
