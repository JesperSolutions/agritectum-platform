      "optionalFields": [
        "branchAddress"
      ],
      "sharedVariables": [
        "brandName",
        "legalEntity",
        "legalAddress",
        "emailReason",
        "unsubscribeUrl"
      ],
      "contentContract": {
        "customerName": "string - Customer's full name",
