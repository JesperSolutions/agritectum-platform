        "branchEmail"
      ],
      "optionalFields": [
        "branchAddress"
      ],
      "sharedVariables": [
        "brandName",
        "legalEntity",
        "legalAddress",
        "emailReason",
        "unsubscribeUrl"
      ],
      "contentContract": {
        "adminName": "string - Branch admin's name",
        "customerName": "string - Customer's full name",
        "offerTitle": "string - Title of the offer",
        "daysSinceSent": "number - Number of days since offer was sent",
        "offerLink": "string - HTTPS URL to view offer details",
        "branchName": "string - Branch/company name",
        "branchPhone": "string - Branch phone number",
        "branchEmail": "string - Branch email address",
        "branchAddress": "string - Optional branch physical address"
      }
    }
  },
