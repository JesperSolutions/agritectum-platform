{
  "name": "agritectum-platform",
  "private": true,
  "version": "1.0.3",
  "type": "module",
  "description": "Agritectum Platform - Professional roof inspection management system with customer portal and real-time notifications",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "format:staged": "prettier --write --ignore-unknown",
    "check": "npm run lint && npm run format:check",
    "fix": "npm run lint:fix && npm run format",
    "preview": "vite preview",
    "setup-firebase": "node scripts/admin-setup.js",
    "create-user": "node scripts/create-user.js",
    "update-claims": "node scripts/update-user-claims.js",
    "emulators": "firebase emulators:start",
    "emulators:export": "firebase emulators:start --import=./emulator-data --export-on-exit=./emulator-data",
    "deploy": "npm run build && firebase deploy --only hosting --project agritectum-platform",
    "deploy:prod": "npm run build && firebase deploy --only hosting,functions,firestore:rules,storage --project agritectum-platform",
    "deploy:test": "npm run build:test && firebase deploy --only hosting,functions,firestore:rules,storage --project agritectum-platform-test",
    "build:test": "vite build --mode test",
    "deploy:rules": "firebase deploy --only firestore:rules,storage",
    "deploy:rules:test": "firebase deploy --only firestore:rules,storage --project taklaget-service-app-test",
    "generate:translations": "node scripts/generate-translation-inventory.cjs"
  },
  "dependencies": {
    "@fontsource/noto-sans": "^5.2.9",
    "@hookform/resolvers": "^5.2.2",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toast": "^1.2.15",
    "@types/leaflet": "^1.9.21",
    "@types/leaflet.markercluster": "^1.5.6",
    "@types/qrcode": "^1.5.5",
    "@types/react-window": "^1.8.8",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "firebase": "^12.4.0",
    "firebase-admin": "^13.6.0",
    "html2canvas": "^1.4.1",
    "immer": "^10.1.3",
    "jspdf": "^3.0.2",
    "leaflet": "^1.9.4",
    "leaflet-defaulticon-compatibility": "^0.1.2",
    "leaflet.markercluster": "^1.5.3",
    "lucide-react": "^0.344.0",
    "qrcode": "^1.5.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.62.0",
    "react-international-phone": "^4.6.0",
    "react-intl": "^7.1.11",
    "react-router-dom": "^7.8.2",
    "react-window": "^2.0.2",
    "react-window-infinite-loader": "^1.0.10",
    "recharts": "^3.3.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7",
    "workbox-webpack-plugin": "^7.3.0",
    "zod": "^4.1.8",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.18",
    "eslint": "^9.9.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "globals": "^15.9.0",
    "postcss": "^8.4.35",
    "prettier": "^3.6.2",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.3.0",
    "vite": "^5.4.2"
  }
}
